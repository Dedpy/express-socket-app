{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Message List: </h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Message</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in messages %}
                    <tr>
                        <td>{{ message.id }}</td>
                        <td>{{ message.message }}</td>
                        <td>{{ message.created }}</td>
                        <td>{{ message.updated }}</td>
                        <td>
                            <a href="/message/{{ message.id }}/edit" class="btn btn-primary">Edit</a>
                            <a href="/message/{{ message.id }}/delete" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
        </div>
    </div>

{% endblock %}
